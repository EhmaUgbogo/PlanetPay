<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.security_questions.CreateSecurityQuestionsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="75dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:background="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/security_questions_txt" />

            <TextView
                android:id="@+id/security_questions_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="64dp"
                android:fontFamily="@font/gotham_bold"
                android:text="Get more secured"
                android:textAlignment="viewStart"
                android:textColor="@color/colorAccent"
                android:textSize="30sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/question_1_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/edit_curves"
                android:fontFamily="@font/gotham_book"
                android:hint="Question 1"
                android:padding="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider" />

            <EditText
                android:id="@+id/answer_1_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_curves"
                android:fontFamily="@font/gotham_book"
                android:hint="Answer 1"
                android:padding="15dp"
                app:layout_constraintEnd_toEndOf="@+id/question_1_edit_text"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/question_1_edit_text"
                app:layout_constraintTop_toBottomOf="@+id/question_1_edit_text" />

            <EditText
                android:id="@+id/question_2_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/edit_curves"
                android:fontFamily="@font/gotham_book"
                android:hint="Question 2"
                android:padding="15dp"
                app:layout_constraintEnd_toEndOf="@+id/question_1_edit_text"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/question_1_edit_text"
                app:layout_constraintTop_toBottomOf="@+id/answer_1_edit_text" />

            <EditText
                android:id="@+id/answer_2_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_curves"
                android:fontFamily="@font/gotham_book"
                android:hint="Answer 2"
                android:padding="15dp"
                app:layout_constraintEnd_toEndOf="@+id/question_1_edit_text"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/question_1_edit_text"
                app:layout_constraintTop_toBottomOf="@+id/question_2_edit_text" />

            <Button
                android:id="@+id/submit_questions_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="48dp"
                android:background="@drawable/btn_curves_ii"
                android:text="Submit"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/answer_2_edit_text"
                app:layout_constraintStart_toStartOf="@+id/answer_2_edit_text"
                app:layout_constraintTop_toBottomOf="@+id/answer_2_edit_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>