<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    tools:context=".views.ui.login_register.RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/textFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/gotham_book"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="First Name"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" />

        <EditText
            android:id="@+id/activity_sign_up_first_name_editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/edit_curves"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:paddingStart="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textFirstName"
            app:layout_constraintTop_toBottomOf="@+id/textFirstName" />

        <TextView
            android:id="@+id/textMiddleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/gotham_book"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Middle Name"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_sign_up_first_name_editText" />

        <EditText
            android:id="@+id/activity_sign_up_middle_name_editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/edit_curves"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:paddingStart="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textFirstName"
            app:layout_constraintTop_toBottomOf="@+id/textMiddleName" />

        <TextView
            android:id="@+id/textLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/gotham_book"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Last Name"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_sign_up_middle_name_editText" />

        <EditText
            android:id="@+id/activity_sign_up_last_name_editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/edit_curves"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:paddingStart="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textFirstName"
            app:layout_constraintTop_toBottomOf="@+id/textLastName" />

        <TextView
            android:id="@+id/textDOB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/gotham_book"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Date of Birth"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_sign_up_last_name_editText" />

        <EditText
            android:id="@+id/activity_sign_up_dob_editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:focusable="false"
            android:editable="false"
            android:background="@drawable/edit_curves"
            android:ems="10"
            android:inputType="date"
            android:padding="15dp"
            android:paddingStart="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textFirstName"
            app:layout_constraintTop_toBottomOf="@+id/textDOB" />

        <TextView
            android:id="@+id/textPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/gotham_book"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Phone Number"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_sign_up_dob_editText" />

        <EditText
            android:id="@+id/activity_sign_up_phone_editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/edit_curves"
            android:ems="10"
            android:inputType="phone"
            android:padding="15dp"
            android:paddingStart="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textFirstName"
            app:layout_constraintTop_toBottomOf="@+id/textPhone" />

        <TextView
            android:id="@+id/textEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/gotham_book"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Email"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/textFirstName"
            app:layout_constraintTop_toBottomOf="@+id/activity_sign_up_phone_editText" />

        <EditText
            android:id="@+id/activity_sign_up_email_editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/edit_curves"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:paddingStart="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textFirstName"
            app:layout_constraintTop_toBottomOf="@+id/textEmail" />

        <TextView
            android:id="@+id/textBVN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/gotham_book"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="BVN"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/textFirstName"
            app:layout_constraintTop_toBottomOf="@+id/activity_sign_up_email_editText" />

        <EditText
            android:id="@+id/activity_sign_up_bvn_editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/edit_curves"
            android:ems="10"
            android:inputType="number"
            android:padding="15dp"
            android:paddingStart="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textFirstName"
            app:layout_constraintTop_toBottomOf="@+id/textBVN" />

        <TextView
            android:id="@+id/textPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/gotham_book"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Password"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/textEmail"
            app:layout_constraintTop_toBottomOf="@+id/activity_sign_up_bvn_editText" />

        <EditText
            android:id="@+id/activity_sign_up_password_editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/edit_curves"
            android:ems="10"
            android:inputType="textPassword"
            android:padding="15dp"
            android:paddingStart="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textPassword"
            app:layout_constraintTop_toBottomOf="@+id/textPassword" />

        <TextView
            android:id="@+id/textConfirmPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/gotham_book"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Confirm Password"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/textEmail"
            app:layout_constraintTop_toBottomOf="@+id/activity_sign_up_password_editText" />

        <EditText
            android:id="@+id/activity_sign_up_confirm_password_editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/edit_curves"
            android:ems="10"
            android:inputType="textPassword"
            android:padding="15dp"
            android:paddingStart="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textConfirmPassword"
            app:layout_constraintTop_toBottomOf="@+id/textConfirmPassword" />

        <Button
            android:id="@+id/activity_sign_up_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/btn_curves_ii"
            android:fontFamily="@font/gotham_book"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/activity_sign_up_confirm_password_editText"
            app:layout_constraintStart_toStartOf="@+id/activity_sign_up_confirm_password_editText"
            app:layout_constraintTop_toBottomOf="@+id/activity_sign_up_confirm_password_editText" />

        <ProgressBar
            android:id="@+id/activity_sign_up_progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/activity_sign_up_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/activity_sign_up_first_name_editText" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/planetpay_launcher" />

        <ProgressBar
            android:id="@+id/activity_register_progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/activity_sign_up_bvn_editText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

