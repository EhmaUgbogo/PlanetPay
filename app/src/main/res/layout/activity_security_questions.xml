<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ui.security_questions.SecurityQuestionsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="75dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/security_questions_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Security Questions"
                android:textAlignment="center"
                android:textColor="@color/TextColorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/sequrity_questions_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Please read the following carefully before proceeding."
                android:textAlignment="center"
                android:textColor="@color/TextColorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/security_questions_txt" />

            <TextView
                android:id="@+id/security_questions_read_me"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="The following security questions and answers will be provided by you, it is a method of ensuring that transactions on PlanetPay are authorized by only the verified user of the account. Kindly ensure you can recall these details as they will be required for authorization of transactions and for changing your details if need be."
                android:textAlignment="viewStart"
                android:textColor="@color/TextColorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sequrity_questions_header" />

            <TextView
                android:id="@+id/question_1_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Question 1"
                android:textColor="@color/TextColorPrimary"
                app:layout_constraintBaseline_toBaselineOf="@+id/question_1_edit_text"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/question_1_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/edit_curves"
                android:padding="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/question_1_txt"
                app:layout_constraintTop_toBottomOf="@+id/security_questions_read_me" />

            <EditText
                android:id="@+id/answer_1_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_curves"
                android:padding="15dp"
                app:layout_constraintEnd_toEndOf="@+id/question_1_edit_text"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/question_1_edit_text"
                app:layout_constraintTop_toBottomOf="@+id/question_1_edit_text" />

            <EditText
                android:id="@+id/question_2_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/edit_curves"
                android:padding="15dp"
                app:layout_constraintEnd_toEndOf="@+id/question_1_edit_text"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/question_1_edit_text"
                app:layout_constraintTop_toBottomOf="@+id/answer_1_edit_text" />

            <EditText
                android:id="@+id/answer_2_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_curves"
                android:padding="15dp"
                app:layout_constraintEnd_toEndOf="@+id/question_1_edit_text"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/question_1_edit_text"
                app:layout_constraintTop_toBottomOf="@+id/question_2_edit_text" />

            <TextView
                android:id="@+id/answer_1_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Answer 1"
                android:textColor="@color/TextColorPrimary"
                app:layout_constraintBaseline_toBaselineOf="@+id/answer_1_edit_text"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/question_2_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Question 2"
                android:textColor="@color/TextColorPrimary"
                app:layout_constraintBaseline_toBaselineOf="@+id/question_2_edit_text"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/answer_2_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Answer 2"
                android:textColor="@color/TextColorPrimary"
                app:layout_constraintBaseline_toBaselineOf="@+id/answer_2_edit_text"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/submit_questions_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="48dp"
                android:background="@drawable/btn_curves_ii"
                android:text="Submit"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/answer_2_edit_text"
                app:layout_constraintStart_toStartOf="@+id/answer_2_txt"
                app:layout_constraintTop_toBottomOf="@+id/answer_2_edit_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>